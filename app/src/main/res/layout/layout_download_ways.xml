<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewCopy"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:padding="4dp"

            android:src="@drawable/copy_url" />


        <TextView
            android:id="@+id/txt_Copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:padding="4dp"
            android:autoLink="all"
            android:clickable="true"
            android:textColor="@color/spots_dialog_color"
            android:textColorLink="@color/colorPrimary"
            android:text="@string/cpy_torrents"
            android:textSize="20sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewDown"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:padding="4dp"
            android:src="@drawable/download_url" />




        <TextView
            android:id="@+id/txt_Down_File"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:autoLink="all"
            android:clickable="true"
            android:padding="4dp"
            android:text="@string/download_torrent_url"
            android:textColor="@color/spots_dialog_color"
            android:textColorLink="@color/colorPrimary"
            android:textSize="20sp" />

    </LinearLayout>

